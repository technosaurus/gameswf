# make configuration for the tu-testbed engine library


#if $(TU_TESTBED_COMPILER) == "MSVC"

# MSVC
CC := cl /nologo
AR := lib /NOLOGO
LIB_OUT_FLAG := /OUT:
LIB_EXT := lib
OBJ_EXT := obj
EXE_EXT := .exe
LIBS := opengl32.lib glu32.lib SDL_image.lib SDL.lib gdi32.lib oldnames.lib
CFLAGS := $(CFLAGS) -I$(INCLUDE_DIRS) -Zi -GX -DWIN32=1
LDFLAGS := $(LIBS) /MD

